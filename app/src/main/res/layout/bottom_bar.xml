<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:layout_alignParentBottom="true"
    android:background="@mipmap/bottom_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <LinearLayout
            android:id="@+id/tab_bottom_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_image_one"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/news"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="消息"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_bottom_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_image_two"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/people"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="联系人"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_bottom_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_image_three"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="设置"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>